<UserControl
    x:Class="ScoreboardModule.Views.ContentView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="300"
    prism:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d">
    <StackPanel Orientation="Vertical">
        <StackPanel Margin="10" Orientation="Horizontal">
            <TextBlock
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                Text="Home team" />
            <TextBox
                Width="80"
                Margin="5,0"
                VerticalAlignment="Center"
                d:Text="LoremIspum"
                Text="{Binding TeamHome, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}" />
        </StackPanel>
        <StackPanel Margin="10" Orientation="Horizontal">
            <TextBlock
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                Text="Score home" />
            <TextBox
                Width="80"
                Margin="5,0"
                VerticalAlignment="Center"
                d:Text="LoremIspum"
                Text="{Binding ScoreHome, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}" />
        </StackPanel>
        <StackPanel Margin="10" Orientation="Horizontal">
            <TextBlock
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                Text="Guest team" />
            <TextBox
                Width="80"
                Margin="5,0"
                VerticalAlignment="Center"
                d:Text="LoremIspum"
                Text="{Binding TeamGuest, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}" />
        </StackPanel>
        <StackPanel Margin="10" Orientation="Horizontal">
            <TextBlock
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                Text="Score guest" />
            <TextBox
                Width="80"
                Margin="5,0"
                VerticalAlignment="Center"
                d:Text="LoremIspum"
                Text="{Binding ScoreGuest, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}" />
        </StackPanel>
        <StackPanel Margin="10" Orientation="Horizontal">
            <TextBlock
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                Text="Period" />
            <TextBox
                Width="80"
                Margin="5,0"
                VerticalAlignment="Center"
                d:Text="LoremIspum"
                Text="{Binding Period, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}" />
        </StackPanel>
        <StackPanel Margin="10" Orientation="Horizontal">
            <TextBlock
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                Text="Is game over" />
            <CheckBox
                Width="80"
                Margin="5,0"
                VerticalAlignment="Center"
                IsChecked="{Binding IsGameOver, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}" />
        </StackPanel>
        <StackPanel Margin="10" Orientation="Horizontal">
            <TextBlock
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                Text="Ticker" />
            <TextBox
                Width="200"
                Margin="5,0"
                VerticalAlignment="Center"
                d:Text="LoremIspum"
                Text="{Binding Ticker, Mode=TwoWay, UpdateSourceTrigger=LostFocus, ValidatesOnDataErrors=True}" />
        </StackPanel>
    </StackPanel>
</UserControl>